<div class="border border-gray-300 mt-24 p-4 rounded-md">
<p class="text-xl font-bold  text-center mb-6">Edit Post</p>

<%= form_for @post do |f| %>
<div class="mb-4">
  <%= f.label :title, class: "font-bold mr-8" %>
  <%= f.text_field :title, class: "rounded-md border px-2 py-1" %>
</div>
<div class="mb-4 flex items-start">
  <%= f.label :content, class: "font-bold mr-2"%>
  <%= f.text_area :content, class: "rounded-md w-full border px-2 py-1" %>
</div>

<div class="w-full flex justify-end">
  <%= f.submit "Save", class: "bg-green-400 px-4 py-2 rounded-md hover:bg-green-600 text-white font-bold text-left" %>
</div>
<% end %>
