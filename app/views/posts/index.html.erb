<% if notice %>
<div class="w-full mb-4 px-4 py-2 rounded-md bg-green-300">
<p class="text-white font-bold"><%= notice %></p>
</div>
<% end %>

<div id="posts">
<% if @posts.length > 0 %>
<h1 class="text-xl font-bold mb-6">Posts</h1>
  <div class="flex flex-col gap-6">
  <% @posts.each do |post| %>
    <%= render post %>

  <% end %>
  <%= link_to "New post", new_post_path, class: "px-4 py-2 w-32 hover:bg-green-600 rounded-md text-white font-bold mt-6 bg-green-400" %>
  </div>
  <% else %>
  <div class="w-full mt-64 text-center">
  <p class="text-xl font-bold text-gray-600 mb-6">No posts found</p>
  <%= link_to "New post", new_post_path, class: "px-4 py-2 w-24 hover:bg-green-600 rounded-md text-white font-bold mt-24 bg-green-400" %>
  </div>
  <% end %>
</div>

